@model IEnumerable<WebAppProjeto23.Models.Produto>
<div class="panel panel-primary">
    <div class="panel-heading">
        Relação de PRODUTOS registrados para a categoria
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Foto</th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProdutoId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>Fabricante</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        <div class="panel-body">
                            <img class="img-thumbnail"
                                 src="@Url.Action("GetLogotipo", "Produtos",
new { id = item.ProdutoId })"
                                 style="display:block;
margin-left:auto; margin-right:auto; width:100px" />
                        </div>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProdutoId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fabricante.Nome)
                    </td>

                </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer panel-info">
    </div>
</div>
